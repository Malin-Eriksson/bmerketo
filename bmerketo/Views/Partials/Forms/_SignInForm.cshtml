@model UserSignInViewModel
<div>
	<a class="link" asp-controller="Account" asp-action="SignUp">SIGN UP</a>
</div>


<div class="sign-up d-flex justify-content-center">
	<h1 class="display-4">Sign Up for new Account</h1>
	<form method="post" class="col-10 col-xl-6" novalidate>

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="mb-3">
			<label asp-for="Email">Email</label>
			<input asp-for="Email" class="form-control" />
			<small class="text-danger"><span asp-validation-for="Email"></span></small>
		</div>
		<div class="mb-3">
			<label asp-for="Password">Password</label>
			<input asp-for="Password" class="form-control" />
			<small class="text-danger"><span asp-validation-for="Password"></span></small>
		</div>
		<div class="mt-5">
			<div class="d-grid">
				<button type="submit" class="btn btn-success">SIGN IN</button>
			</div>
		</div>
	</form>
</div>

