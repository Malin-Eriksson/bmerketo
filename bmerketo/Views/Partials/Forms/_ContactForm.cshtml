@model ContactFormViewModel

<section class="contact-form">
    <div class="container">
        <div class="title">Write something</div>

        <form method="post" novalidate>
            <div class="mb-3">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" onkeyup="validateText(event)" id="Name" />
                <small class="text-danger" data-valmsg-for="Name"><span asp-validation-for="Name"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" onkeyup="validateEmail(event)" id="Email" />
                <small class="text-danger" data-valmsg-for="Email"><span asp-validation-for="Email"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber">Phone number (optional)</label>
                <input asp-for="PhoneNumber" class="form-control" onkeyup="validateText(event)" id="PhoneNumber" />
                <small class="text-danger" data-valmsg-for="PhoneNumber"><span asp-validation-for="PhoneNumber"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Company">Company name (optional)</label>
                <input asp-for="Company" class="form-control" onkeyup="validateText(event)" id="Company" />
                <small class="text-danger" data-valmsg-for="Company"><span asp-validation-for="Company"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Message">Message</label>
                <textarea asp-for="Message" class="form-control" onkeyup="validateText(event)" id="Message" ></textarea>
                <small class="text-danger" data-valmsg-for="Message"><span asp-validation-for="Message"></span></small>
            </div>
            <div class="terms form-checkbox-group">
                <label class="custom-checkbox">
                    Save my name, email in the this browser for the next time I comment.
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
            </div>
            <button class="btn-theme">Submit</button>
        </form>
    </div>
</section>
