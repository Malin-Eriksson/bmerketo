@inject ShowcaseService showcaseService
@{
    var showcase = showcaseService.GetLatest();
}

@if (showcase != null)
{
    <section class="showcase">
        <div class="container">
            <div class="content">
                <div class="ingress">@showcase?.Ingress</div>
                <div class="title">@showcase?.Title</div>

                @if (!string.IsNullOrEmpty(@showcase?.Link?.Url) && !string.IsNullOrEmpty(@showcase?.Link?.Content))
                {
                    <a href="@showcase?.Link?.Url" class="btn-theme">@showcase?.Link?.Content</a>
                }

            </div>
            <div class="content-image">
                <img src="@showcase?.ImageUrl" alt="@showcase?.Title">
            </div>
        </div>
    </section>   
}

